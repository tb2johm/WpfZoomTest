<Window x:Class="WpfZoomExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="430">
    <Grid>
        <StackPanel Background="AliceBlue" Height="400" Width="300">
            <StackPanel HorizontalAlignment="Stretch" Background="Gray" Height="350">
                <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300">
                    <Canvas Background="Wheat" Height="200" Width="200">
                        <Rectangle Fill="#FFF4F4F5" Height="33" Canvas.Left="10" Stroke="Black" Canvas.Top="22" Width="47"/>
                        <Rectangle Fill="#FFF4F4F5" Height="34" Canvas.Left="57" Stroke="Black" Canvas.Top="55" Width="54"/>
                        <Rectangle Fill="#FFF4F4F5" Height="36" Canvas.Left="111" Stroke="Black" Canvas.Top="89" Width="50"/>
                    </Canvas>
                </Viewbox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
