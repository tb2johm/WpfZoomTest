<Window x:Class="WpfZoomExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="400">
    <StackPanel x:Name="OuterPanel" Background="AliceBlue">
        <StackPanel x:Name="InnerPanel" HorizontalAlignment="Stretch" Background="Gray" Height="350">
            <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="200">
                <Canvas Background="Wheat" Height="200" Width="200">
                    <Rectangle Fill="#FFF4F4F5" Height="33" Canvas.Left="10" Stroke="Black" Canvas.Top="22" Width="47"/>
                    <Rectangle Fill="#FFF4F4F5" Height="34" Canvas.Left="57" Stroke="Black" Canvas.Top="55" Width="54"/>
                    <Rectangle Fill="#FFF4F4F5" Height="36" Canvas.Left="111" Stroke="Black" Canvas.Top="89" Width="50"/>
                </Canvas>
            </Viewbox>
        </StackPanel>
    </StackPanel>
</Window>
